extends layout

block content

  mixin colors(colors)
    ul.colors
      - each color in colors
        li(id="#{color.name}", class="color #{color.name}")
          a.back(href="#") &times;
          a.fill(href="##{color.name}", style="background-color:#{color.name}")
            h2= color.name
            abbr= color.hex

  +colors(colors)

block footerScripts